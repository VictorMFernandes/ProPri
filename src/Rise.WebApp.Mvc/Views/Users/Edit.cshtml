@model Rise.WebApp.Mvc.Views.Users.ViewModels.UserFormViewModel

@{
    ViewData["Title"] = Model.Name;
}

<form enctype="multipart/form-data" asp-action="Edit">
    <div class="row">
        <div class="content content-s">
            <partial name="_Details" />
        </div>

        <div class="content content-g">

            <div class="col-md-10">

                <partial name="_FormFields" />

                <input type="hidden" asp-for="DeleteOriginalImage" id="id-delete-original-image"/>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}