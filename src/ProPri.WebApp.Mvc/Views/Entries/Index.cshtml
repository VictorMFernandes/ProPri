@model IEnumerable<ProPri.WebApp.Mvc.Views.Entries.ViewModels.EntryIndexViewModel>

@{
    ViewData["Title"] = "Entries";
}

<style>
    .table-btn {
        cursor: pointer;
    }
    .table-btn spam {
        color: var(--light);
    }
</style>


<h3>@ViewData["Title"]</h3>

<div class="row">
    <p class="col-9 align-middle">
        <a asp-action="Create">Create New</a>
    </p>

    <select class="col form-control">
        <option>All</option>
        <option selected="selected">Noun</option>
        <option>Adverb</option>
        <option>Verb</option>
