    <thead class="thead-dark">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.English)
            </th>
            <th class="d-none d-sm-table-cell">
                @Html.DisplayNameFor(model => model.Portuguese)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classification)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @*@foreach (var palavra in Model) {*@
        <tr>
            <td>
                <a asp-action="Edit">
