@model ProPri.WebApp.Mvc.Views.Palavras.ViewModels.PalavraFormViewModel

@{
    ViewData["Title"] = "Nova Palavra";
}

<h4>Criando</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form enctype="multipart/form-data" asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="div-img" style="background-image: url('https://birkeland.uib.no/wp-content/themes/bcss/images/no.png');
                                      width: 100px; height: 100px;">
            </div>

            <div class="form-group">
                <label asp-for="TextoPortugues" class="control-label"></label>
                <input asp-for="TextoPortugues" class="form-control"/>
                <span asp-validation-for="TextoPortugues" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TextoIngles" class="control-label"></label>
                <input asp-for="TextoIngles" class="form-control"/>
                <span asp-validation-for="TextoIngles" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#ImagemUpload").change(function () {
            $("#img_nome").text(this.files[0].name);
            $("#img_nome")[0].style.display = 'block';
        });

        $("#ImagemUpload").attr("data-val", "true");
        $("#ImagemUpload").attr("data-val-required", "Preencha o campo Imagem");
    </script>
}
